                        </openin_select>

                        <label translate="label">
                            <label>Label:</label>
                            <comment>Button or link text. Ex.: « Previous (#product#)</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </label>

                        <background_image>
                            <label>Use image instead of text</label>
                            <comment><![CDATA[<strong>Upload your custom image]]></comment>
                            <frontend_type>file</frontend_type>
                            <backend_model>adminhtml/system_config_backend_file</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">background</upload_dir>
                            <base_url type="media" scope_info="1">background</base_url>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>50</sort_order>
                        </background_image>
                    </fields>
                </previous>

