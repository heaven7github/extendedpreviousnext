<?xml version="1.0"?>
<layout version="0.1.0">
   <catalog_product_view>

       <reference name="head">
           <action method="addItem" ifconfig="heaven7_extendedpreviousnext/general/enabled_select">
               <type>skin_css</type>
               <name>css/extendedpreviousnext.css</name>
           </action>
       </reference>

       <reference name="content">

           <!-- remove previous next extension free version -->
           <remove name="previousnext_after" />
           <remove name="previousnext_before" />

           <!-- add after, before templates -->
           <block type="core/template" template="extendedpreviousnext/after.phtml" name="extendedpreviousnext_after" after="-"></block>
           <block type="core/template" template="extendedpreviousnext/before.phtml" name="extendedpreviousnext_before" before="-"></block>
       </reference>
	</catalog_product_view>
</layout> 